<com:TContent ID="MainContent">
    <com:TCallback ID="loginBtn" OnCallback="login" />
    <com:TCallback ID="signUpBtn" OnCallback="signUp" />
    <br />
    <br />
	<div class="container">
		<div class="row" id="main-panel">
			<div class="col-sm-6">
				<div class="panel login-form" role="form">
					<div class="panel-body">
						<h4 class="form-signin-heading">Got Account? Sign in Please.</h4>
						<div class="msg-div"></div>
						<div class="form-group">
							<label for="email">Email:</label>
							<div class="input-group">
								<span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span> 
								<input login-panel="email" type="email" class="form-control email" placeholder="Your email" onkeydown="pageJs.keydown(event, function(){$('loginbtn').click();});" required autofocus/>
							</div>
						</div> 
						<div class="form-group">
							<label for="password">Password:</label>
							<div class="input-group">
								<span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span> 
								<input login-panel="password" type="password" class="form-control password" placeholder="Password" onkeydown="pageJs.keydown(event, function(){$('loginbtn').click();});" required />
							</div>
						</div> 
						<div class="form-group">
							<a href="javascript: void(0);" onclick="pageJs.showRetrievePassPanel(this);">Forgot Password?</a>
							<span id="loginbtn" class="btn btn-md btn-primary pull-right"onclick="pageJs.login(this);" data-loading-text="Signing in...">Sign in</span>
						</div>
					</div>
				</div>
			</div>
			<div class="col-sm-6">
				<div class="panel panel-success signup-form" role="form" id="signup-form">
					<div class="panel-body">
						<h4 class="form-signin-heading">New? One Step Signup.</h4>
						<div class="msg-div"></div>
						<div class="form-group">
							<label for="email">Email:</label>
							<div class="input-group">
								<span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span> 
								<input id="signup-email" type="email" class="form-control email" placeholder="Your email" onclick="$(this).select();" onkeydown="pageJs.keydown(event, function(){ $('signup-form').down('.signup-btn').click(); });" required autofocus/>
							</div>
						</div>
						<span class="btn btn-lg btn-success pull-right signup-btn" onclick="pageJs.signUp(this);" data-loading-text="<i class='fa fa-refresh fa-spin'></i>">Sign me up</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</com:TContent>